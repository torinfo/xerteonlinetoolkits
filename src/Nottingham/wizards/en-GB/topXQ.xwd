<wizard menus="Interactivity">
    <pageWizard remove="true" dublicate="false">
        <newNodes>
            <topXQ><![CDATA[<topXQ name="Enter Page Title" instruction = "Enter Instruction" prompt= "Enter a Prompt"  align = "Left" panelWidth = "Medium" numberAnswers = "*" caseSensitivity="true"
			 feedbackLabel="Feedback"
			 attemptLabel="Attempts remaining"
			 correctAnswersLabel="Correct answers"
			 otherCorrectAnswersLabel="Other possible answers"
			 passed="Well done, you have completed the activity"
			 failed="Not all of the answers are correct"
             answerFieldLabel="Answer"
	         checkBtnTxt="Submit"
			 noattemptTxt="Please attempt the activity"/>]]></topXQ>
        </newNodes>
    </pageWizard>

    <!-- TXQ PAGE=============================-->
<topXQ menu = "Interactivity" menuItem = "Answer X of Y" hint = "Poses a question with multiple answers where the student can't see the answers like in a MCQ. The user can give the answers in any order." icon="icTopXQ" thumb="thumbs/topXQ.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#answerxofy" wiki="https://xerte.org.uk/wiki/doku.php?id=interactivity_answer_x_of_y" remove="true">
    <name label = "Page Title" type = "TextInput" wysiwyg = "true"/>
    <instruction label = "Instruction" type = "TextArea" height = "100"/>
    <prompt label="Question" type="TextArea" height="100"/>
	<align label="Align Text" options="Left,Right" type="ComboBox" data="Left,Right" defaultValue="Left" width="100"/>
	<panelWidth label="Panel Width" options="Small,Medium,Large,Full" type="ComboBox" data="Small,Medium,Large,Full" defaultValue="Medium" width="100"/>
    <numberAnswers label="Number of Answers" type="TextInput" defaultValue="*" tooltip="Number of answer fields shown on the page. Specify a number or enter * to create an answer field for every possible answer."/>
	<caseSensitivity label="Case Sensitive" defaultValue="true" type="CheckBox" tooltip="Treat answers as case sensitive" mandatory="true"/>
	
	<feedback type="TextArea" height="40" label="Feedback" optional="true" defaultValue="Enter feedback here"/>
	<showAnswers label="Show Answers" defaultValue="true" type="ComboBox" options="Show all answers,Show other possible answers,Show no answers" data="true,others,false" optional="true" tooltip="Control whether a list of answers (either all possible answers or only those not already found) is shown when activity is complete"/>
	<delimiters type="group" label="Delimiters" optional="true">
        <answerDelimiter label="Answer Delimiter" type="textInput" defaultValue="," optional="true" tooltip="The character separating the answers"/>
    </delimiters>
    <amountOfTries label="Attempts" type="TextInput" defaultValue="1" optional="true" tooltip="Attempts allowed before feedback is given"/>
    <trackingWeight label="Tracking Score Weight (0=Off)" optional="true" type="textInput" width="120" defaultValue="1.0" />


    <feedbackLabel label="Feedback Label" type="TextInput" wysiwyg="false" divider="true" language="true" />
    <correctAnswersLabel label="Correct Answers Label" type="TextInput" wysiwyg="false" language="true"/>
    <otherCorrectAnswersLabel label="Other Answers Label" type="TextInput" wysiwyg="false" language="true" mandatory="true"/>
    <passed label="Correct Text" type="TextInput" wysiwyg="false" language="true"  />
    <failed label="Incorrect Text" type="TextInput" wysiwyg="false" language="true" />
	<attemptLabel label="Attempt Label" type="TextInput" wysiwyg="false" language="true"/>
	<noAttemptTxt label="No attempt Text" type="TextInput" wysiwyg="false" language="true" mandatory="true"/>
    <checkBtnTxt label="Check Button Label" type="TextInput" wysiwyg="false" language="true" />
	<answerFieldLabel label="Answer Field Hidden Aria-Label" type="TextInput" wysiwyg="false" language="true" mandatory="true" defaultValue="Answer" tooltip="This is a hidden label specifically for screen reader users so that each text field is labelled and spoken as Answer 1, Answer 2 etc."/>

	<AIGroup type="group" label="AI" optional="true">
          <aiSelector label="AI model" options="OpenAI,Claude" type="comboBox" data="openai,copilot" defaultValue="openai" width="120" optional="true"/>
          <subject label="Subject" type="TextInput" wysiwyg="true" tooltip = "This determines which area or subject the generated words will follow. More complex subjects may result in less consistent content. For this interactivity, it is recommended to reference countable things when defining the subjects. Examples: 'Provincial capital cities in the Netherlands', 'Rivers in Europe'." optional="true"/>
          <numberOfOptions label="Number of Options" type="TextInput" tooltip="Amount of words to generate on the designated subject. When the total quantity of the subject is known, avoid requesting a number of words that is higher in quantity. For example, if the subject is 'Provincial capitals in the Netherlands', requesting more than 12 words (the total amount of capitals) may lead to speculative or repeated words past the 12th." wysiwyg="true" optional="true"/>
          <ageRange label="Reading Level" type="TextInput" tooltip="The estimated age, grade, education or other qualifier for which the AI will attempt to curate the content. Examples: students aged 12-16, grade 7 students in the Netherlands, university graduates, office workers in the education field, A2 level Dutch speakers, etc." wysiwyg="true" optional="true"/>
          <voiceSelector label="Tone and Style" type="TextInput" wysiwyg="true" tooltip = "Adjusts the tone and style of the generated content. Possibilities include: formal, semi-formal, informal, semi-informal, active, passive as well as combinations. Additional modifiers are possible, but may result in less consistent content. Examples: 'Semi-formal teaching, active voice', 'formal, passive voice, usage instructions'." optional="true"/>
          <uploadPrompt label="Upload file?" type="checkbox" defaultValue="false" tooltip="Check to upload a file. Please ensure the uploaded file corresponds to the requested subject. If relevant information is not found in the file, the AI will attempt to supplement with its own knowledge." optional ="true"/>
          <file label="File" type="media" defaultValue="Upload a file" tooltip = "Select a video, audio, powerpoint, PDF or other text file to be used for content generation." optional="true"/>
          <fileAccessPrompt label="Allow information supplementation" type="checkbox" defaultValue="false" tooltip = "Instruct the AI to use information beyond what was provided in the file, using its own knowledge stores. Keep in mind that this may result in inaccurate information and should be thoroughly double-checked!" optional ="true"/>
          <aiButton type="aibutton" optional="true"/>
          <explanation label="This content is generated using AI. Make sure to double-check and adjust!" type="info" optional="true"/>
    </AIGroup>

    <newNodes>
        <optionXQ><![CDATA[<option answer = "Here is an option" name = "Answer" feedback = "Feedback for this option" correct = "false"/>]]></optionXQ>
    </newNodes>
</topXQ>

    <optionXQ menuItem="Answer" icon="icBullet">
        <answer label="Answer" type="TextInput" wysiwyg="false" mandatory="true"/>
        <name label="Label" type="TextInput" />
    </optionXQ>

</wizard>
