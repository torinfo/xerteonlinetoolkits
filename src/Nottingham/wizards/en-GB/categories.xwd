<wizard menus="Interactivity">
  <pageWizard remove="true" duplicate="false">
    <newNodes>
      <categories><![CDATA[<categories name="Enter Page Title" text="Enter text for the page here" feedback="Enter feedback here" buttonLabel="Check Answers" feedbackScore="You have placed {i} out of {n} labels correctly"/>]]></categories>
    </newNodes>
  </pageWizard>

  <!-- CATEGORIES INTERACTION========================= -->
  <categories menu="Interactivity" menuItem="Categories" hint="An interaction allowing the user to sort items into a number of categories." icon="icLayers" remove="true" thumb="thumbs/categories.jpg" example="https://xot.xerte.org.uk/play_116?hide=bottom#categories" wiki="https://xerte.org.uk/wiki/doku.php?id=interactivity_categories_page" >

    <name label="Page Title" type="TextInput" wysiwyg="true" />
    <text label="Page Text" type="TextArea" height="200"/>
    <feedback label="Feedback" type="TextArea" height="100"/>

	<buttonLabel label="Button Label" type="TextInput" wysiwyg="true" divider="true" language="true" />
	<buttonWidth label="Button Width" type="NumericStepper" min="100" max="300" step="10" defaultValue="120" width="100" language="true" deprecated="Width is now set automatically"/>
	<feedbackScore label="Score Feedback" type="TextInput" wysiwyg="true" language="true" />

    <trackingWeight label="Tracking Score Weight (0=Off)" optional="true" type="textInput" width="120" defaultValue="1.0" />

    <newNodes>
      <category><![CDATA[<category name="Enter Category Name Here"/>]]></category>
    </newNodes>

  	<AIGroup type="group" label="AI" optional="true">
      	  <aiSelector label="AI model" options="OpenAI,Copilot" type="comboBox" data="openai,copilot" defaultValue="openai" width="120" optional="true"/>
            <subject label="List the different categories separated by ," type="TextInput" wysiwyg="true" optional="true"/>
            <wordsPerCategory label="Amount of words for each category" type="TextInput" wysiwyg="true" optional="true"/>
            <ageRange label="Age Range" type="TextInput" wysiwyg="true" optional="true"/>
            <img label="File" type="media" defaultValue="Upload a file" optional="true"/>
            <uploadPrompt label="Upload file?" type="checkbox" defaultValue="false" optional ="true"/>
            <aiButton type="aibutton" optional="true"/>
      </AIGroup>
  </categories>

  <category menuItem="Category" icon="icGroup" remove="true">

    <name label="Category Name" type="TextInput" wysiwyg="true"/>

    <newNodes>
      <item><![CDATA[<item name="Enter Item Text Here"/>]]></item>
    </newNodes>

  </category>

  <item menuItem="Item" icon="icBullet">
    <name label="Item Text" type="TextInput" wysiwyg="true"/>
  </item>  
  
</wizard>
